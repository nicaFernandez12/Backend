<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - ProductManager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .product-card {
            transition: transform 0.2s ease-in-out;
        }
        .product-card:hover {
            transform: translateY(-5px);
        }
        .navbar-brand {
            font-weight: bold;
        }
        .socket-status {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 12px;
            font-weight: bold;
        }
        .socket-connected {
            background-color: #28a745;
            color: white;
        }
        .socket-disconnected {
            background-color: #dc3545;
            color: white;
        }
        .form-floating {
            margin-bottom: 1rem;
        }
        .btn-action {
            margin: 0 2px;
        }
        .price-badge {
            font-size: 1.2em;
            font-weight: bold;
        }
        .stock-badge {
            font-size: 0.9em;
        }
        .notification {
            position: fixed;
            top: 70px;
            right: 20px;
            z-index: 1000;
            max-width: 300px;
            display: none;
        }
    </style>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-store"></i> ProductManager
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/realtimeproducts">
                            <i class="fas fa-sync-alt"></i> Tiempo Real
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Socket Status -->
    <div id="socketStatus" class="socket-status socket-disconnected" style="display: none;">
        <i class="fas fa-plug"></i> Desconectado
    </div>

    <!-- Notification -->
    <div id="notification" class="notification">
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <span id="notificationMessage"></span>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>

    <!-- Main Content -->
    <main class="container mt-4">
        {{{body}}}
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light text-center py-3 mt-5">
        <div class="container">
            <p>&copy; 2024 ProductManager. Desarrollado con Express, Handlebars y Socket.io</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Funciones globales para notificaciones
        function showNotification(message, type = 'info') {
            const notification = document.getElementById('notification');
            const messageElement = document.getElementById('notificationMessage');
            const alertDiv = notification.querySelector('.alert');
            
            messageElement.textContent = message;
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            notification.style.display = 'block';
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                notification.style.display = 'none';
            }, 5000);
        }

        // Función para formatear precio
        function formatPrice(price) {
            return new Intl.NumberFormat('es-AR', {
                style: 'currency',
                currency: 'ARS'
            }).format(price);
        }

        // Función para validar formulario
        function validateForm(form) {
            const requiredFields = form.querySelectorAll('[required]');
            let isValid = true;
            
            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    field.classList.add('is-invalid');
                    isValid = false;
                } else {
                    field.classList.remove('is-invalid');
                }
            });
            
            return isValid;
        }

        console.log('Socket definido');
    </script>
</body>
</html>